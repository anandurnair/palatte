{
   "compilerOptions": {
    "typeRoots": [
        "./node_modules/@types",
        "./types"
      ],
       "lib": [
           "dom",
           "dom.iterable",
           "esnext"
       ],
       "esModuleInterop": true,
       "target": "es5",
       "module": "commonjs",
       "moduleResolution": "node",
       "outDir": "./dist",
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "sourceMap": true,
       "forceConsistentCasingInFileNames": true,
       "strict": true
   }
}
